<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <strong>Ptip:</strong>
  <%= @product.ptip %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Composition:</strong>
  <%= @product.composition %>
</p>

<p>
  <strong>Image url:</strong>
  <%= @product.image_url %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Category</strong>
  <% @product.categories.each do |category| %><br>
  <%= category.title %><br>
  <% end %>
</p>

<% if @is_admin %>
  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>
<% end %>
